<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   android:background="#354685" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="NFC Server Side Application"
        android:textStyle="bold" 
        android:textSize="30dp"
        android:textColor="#141f4c"
            android:background="#ffffff" />
    
    <TextView
        android:layout_below="@+id/txt_serverside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server Information" 
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="#141f4c"
        android:id="@+id/textview"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nfc_server_info"
        android:text="Server's Device"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        />
<TextView
        android:layout_below="@+id/txt_serverside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Client's Information" 
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="#141f4c"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nfc_client_info"
        android:text="Client's Device"
 android:layout_marginTop="5dp"      
 android:textColor="#ffffff"  />

</LinearLayout>
